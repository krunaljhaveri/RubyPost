<%= form_for @comment, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_area :content, :class => 'text_area', :style => 'width: 784px; height: 150px', :placeholder => 'Enter comment' %>
        <%= f.hidden_field :post_id, :value => @comment.post_id ? @comment.post_id : @post.id %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>

      <!-- <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  @comment.post, :class => 'btn' %> -->

    </div>
<% end %>
